# VIM, Neovim and GVIM
cp .vimrc ~
cp .gvimrc ~
cp -r nvim ~/.config/

mkdir -p ~/.vim/colors
cp Tomorrow-Night-Eighties.vim ~/.vim/colors/

# AwesomeWM
mkdir -p ~/.config/awesome/
cp freedesktop/ lain/ themes/ ~/.config/awesome/
cp rc.lua ~/.config/awesome/

# Bitstream Vera, DejaVu, and Iosevka Antibody fonts - can't live without them!
cp fonts/* ~/.fonts/
fc-cache -f

# i3
mkdir ~/.i3
cp i3.config ~/.i3/config

mkdir -p ~/.config/i3status
cp i3status.config ~/.config/i3status
