# VIM and GVIM
cp .vimrc.before ~
cp .vimrc.local ~
cp .gvimrc.local ~

# Terminal emulator
cp terminator/config ~/.config/terminator/

# AwesomeWM
cp theme.lua ~/.config/awesome/
cp rc.lua ~/.config/awesome/

# Bitstream Vera fonts - can't live without them!
cp fonts/* ~/.fonts/

# PulseAudio volume script
mkdir ~/bin
cp pulse_volume.shl ~/bin/

# i3
cp i3.config ~/.i3/config
